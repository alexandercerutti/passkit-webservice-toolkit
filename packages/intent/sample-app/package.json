{
	"name": "@intentjs/new-app-starter",
	"version": "0.0.3",
	"description": "A starter template for intent application",
	"author": "Vinayak Sarawagi <vinayaksarawagi25@gmail.com>",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "pnpm intent build",
		"start": "pnpm intent start",
		"dev": "pnpm intent start --watch",
		"test": "pnpm jest",
		"test:watch": "pnpm jest --watch",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "pnpm jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@intentjs/core": "^0.1.36",
		"@intentjs/hyper-express": "^0.0.4",
		"yargs-parser": "^21.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"reflect-metadata": "^0.2.0",
		"winston": "^3.14.2",
		"intent-passkit-webservice": "workspace:^"
	},
	"devDependencies": {
		"@intentjs/cli": "^0.0.7",
		"@nestjs/testing": "^10.0.0",
		"@swc/cli": "^0.4.1-nightly.20240914",
		"@swc/core": "^1.7.26",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"jest": "^29.5.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "app",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"testEnvironment": "node"
	}
}
