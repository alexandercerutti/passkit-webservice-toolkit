{
	"compilerOptions": {
		"target": "ES2018",
		"module": "Node16",
		"moduleResolution": "Node16",
		"sourceMap": true,
		"outDir": "lib",
		"rootDir": "src",
		"newLine": "lf",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"importHelpers": true
	},
	"include": ["src/**/*"]
}
